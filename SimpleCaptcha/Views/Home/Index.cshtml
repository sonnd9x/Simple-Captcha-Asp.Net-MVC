@model SimpleCaptcha.Models.LoginViewModel
@{
    ViewBag.Title = "Home Page";
}
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="row">
        <div class="col-xs-6 col-lg-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading">Login</div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username)
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password)
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        <img src="/Home/GetCaptchaImage" title="Captcha" />
                        <br />
                        <br />
                        @Html.TextBoxFor(model => model.Captcha, new { @class = "form-control", @required = "required", @placeholder = "Input captcha" })
                        <p style="font-weight:bold;color:red;">@ViewBag.CaptchaError</p>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}